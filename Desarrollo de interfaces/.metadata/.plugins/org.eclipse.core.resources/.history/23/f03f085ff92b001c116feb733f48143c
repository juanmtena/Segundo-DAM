package ctrl;

public class CtrlPrincipal {

	public static int numPreg;
	
	public static void inicio() {
		
		model.Lenguajes.cargarLenguajes();
		generarNumPregunta();
		String pregunta = model.Lenguajes.ingles.get(numPreg);
		
		new view.FrmPrincipal();
		view.FrmPrincipal.lblPalabra.setText(pregunta);
		
	}
	
	public static void generarNumPregunta() {
		numPreg = (int)Math.floor(Math.random()*(9-1+0)+0);
		//numPreg = 1;
	}
	
	public static void comprobarPalabraEspanol() {
		String busqueda = view.FrmPrincipal.lblPalabra.getText();
		int indice = model.Lenguajes.espanol.indexOf(busqueda);
		int indice2 = model.Lenguajes.ingles.indexOf(indice);
		if (indice == indice2) {
			System.out.println("CORRECTO");
		} else {
			System.out.println("INCORRECTO");
		}
	}
	
}
