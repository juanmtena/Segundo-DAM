		JScrollPane scrollTamano = new JScrollPane();
		scrollTamano.setBounds(178, 46, 85, 109);
		contentPanel.add(scrollTamano);
		
		JLabel lblEstilo = new JLabel("ESTILO");
		lblEstilo.setBounds(327, 21, 46, 14);
