		contentPanel.setLayout(null);
		
		JLabel lblFuente = new JLabel("FUENTE");
		lblFuente.setBounds(47, 21, 46, 14);
		contentPanel.add(lblFuente);
		
		JScrollPane scrollFuente = new JScrollPane();
		scrollFuente.setBounds(28, 46, 85, 109);
